{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "lib": ["ESNext", "DOM"],
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"]
    },
    "types": ["vite/client", "node", "vite-plugin-svg-icons/client", "element-plus/global"],
    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "build/**/*.ts", "build/**/*.d.ts", "auto-imports.d.ts"],
  "exclude": ["node_modules", "dist", "**/*.js"]
}
